#! /bin/bash

# Add path to repo
export REPO_PATH="$(realpath .)"

# Create virtual environment
(python3 -m venv virtual_environment)


# Activate virtual environment to source
source virtual_environment/bin/activate

## Install our package
echo "Installing vrops-adapter-tools"
pip install .

echo "Installation completed. Run the following command to activate the virtual environment:"
echo "source virtual_environment/bin/activate"

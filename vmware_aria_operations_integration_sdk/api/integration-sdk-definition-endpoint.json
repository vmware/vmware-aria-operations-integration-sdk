{
  "openapi": "3.0.0",
  "info": {
    "title": "Adapter API",
    "version": "1.0.0",
    "contact": {
      "name": "VMware, Inc"
    },
    "description": "The API contract is defined using a standard OpenAPI specification to simplify adapter development.",
    "license": {
      "name": "Apache-2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.txt"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/adapterDefinition": {
      "get": {
        "summary": "Retrieve the data model for collection",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdapterDefinition"
                }
              }
            }
          },
          "204": {
            "description": "No Adapter Definition returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        },
        "operationId": "definition",
        "description": "Get Adapter Definition"
      },
      "parameters": []
    }
  },
  "components": {
    "schemas": {
      "AttributeDefinition": {
        "type": "object",
        "title": "Attribute Definition",
        "description": "Defines an attribute's metadata",
        "properties": {
          "key": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "unit": {
            "type": "string",
            "nullable": true
          },
          "is_rate": {
            "type": "boolean",
            "default": false
          },
          "is_discrete": {
            "type": "boolean",
            "default": false
          },
          "is_kpi": {
            "type": "boolean",
            "default": false
          },
          "is_impact": {
            "type": "boolean",
            "default": false
          },
          "is_key_attribute": {
            "type": "boolean",
            "default": false
          },
          "dashboard_order": {
            "type": "integer",
            "format": "int32"
          },
          "data_type": {
            "type": "string"
          },
          "is_property": {
            "type": "boolean"
          }
        },
        "required": [
          "key",
          "label",
          "is_rate",
          "is_discrete",
          "is_kpi",
          "is_impact",
          "is_key_attribute",
          "dashboard_order",
          "data_type",
          "is_property"
        ]
      },
      "CredentialDefinition": {
        "type": "object",
        "title": "Credential Definition",
        "description": "Defines what credential fields are present on a given credential type",
        "properties": {
          "key": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "required": {
                  "type": "boolean",
                  "default": true
                },
                "password": {
                  "type": "boolean",
                  "default": false
                },
                "enum": {
                  "type": "boolean",
                  "default": false
                },
                "enum_values": {
                  "type":"array",
                  "items":{
                    "type": "object",
                    "properties":{
                      "key":{
                        "type":"string"
                      },
                      "label":{
                        "type":"string"
                      },
                      "display_order":{
                        "type":"integer",
                        "format":"int32"
                        "minimum": 0
                      }
                    }
                  },
                },
                "default": {
                  "type": "string",
                  "nullable": true
                },
                "display_order": {
                  "type": "integer",
                  "format": "int32"
                },
                "type": {
                  "type": "string",
                  "default": "string"
                }
              },
              "required": [
                "key",
                "label",
                "required",
                "password",
                "enum",
                "display_order",
                "type"
              ]
            }
          }
        }
      },
      "IdentifierDefinition": {
        "type": "object",
        "title": "Identifier Definition",
        "description": "Defines what identifiers are present on a given object type",
        "properties": {
          "key": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "required": {
            "type": "boolean",
            "default": true
          },
          "ident_type": {
            "type": "integer",
            "format": "int32",
            "default": 1
          },
          "enum": {
            "type": "boolean",
            "default": false
          },
          "enum_values": {
            "type":"array",
            "items":{
              "type": "object",
              "properties":{
                "key":{
                  "type":"string"
                },
                "label":{
                  "type":"string"
                },
                "display_order":{
                  "type":"integer",
                  "format":"int32"
                  "minimum": 0
                }
              }
            },
          },
          "display_order": {
            "type": "integer",
            "format": "int32"
          },
          "type": {
            "type": "string"
          },
          "length": {
            "type": "integer",
            "nullable": true
          },
          "default": {
            "type": "string",
            "nullable": true
          }
        },
        "required":[
          "key",
          "label",
          "required",
          "ident_type",
          "enum",
          "display_order",
          "type"
        ]
      },
      "GroupDefinition": {
        "title": "Group Definition",
        "type": "object",
        "description": "Definition of a group of attributes and subgroups",
        "properties": {
          "attributes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AttributeDefinition"
            }
          },
          "groups": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GroupDefinition"
            }
          }
        }
      },
      "ObjectDefinition": {
        "title": "Object Definition",
        "type": "object",
        "description": "Definition of an object type",
        "properties": {
          "key": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "identifiers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/IdentifierDefinition"
            }
          },
          "attributes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AttributeDefinition"
            }
          },
          "groups": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GroupDefinition"
            }
          }
        },
        "required": [
          "key",
          "label",
          "identifiers",
          "groups"
        ]
      },
      "AdapterDefinition": {
        "title": "Adapter Definition",
        "type": "object",
        "description": "Definition of the object model returned in CollectResult",
        "properties": {
          "adapter_key": {
            "type": "string"
          },
          "adapter_label": {
            "type": "string"
          },
          "describe_version": {
            "type": "integer",
            "format": "int32"
          },
          "adapter_instance": {
            "$ref": "#/components/schemas/ObjectDefinition"
          },
          "credential_types": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CredentialDefinition"
            }
          },
          "object_types": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ObjectDefinition"
            }
          }
        },
        "required": [
          "adapter_key",
          "adapter_label",
          "describe_version",
          "adapter_instance",
          "credential_types",
          "object_types"
        ]
      }
    }
  }
}
